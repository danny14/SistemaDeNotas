@page "/NotasAdd"

@using SistemaDeNotas.Data.Model
@using SistemaDeNotas.Data.Services

@inject INotasService NotasService
@inject NavigationManager NavigationManager

<h1>Adicionar Film</h1>

<EditForm Model="@nota" OnValidSubmit="@NotasInsert">
    <table>
        <tr>
            <td>Id:</td>
            <td><input type="text" @bind="nota.idNotas" required /></td>
        </tr>
        <tr>
            <td>Nota 1:</td>
            <td><input type="number" @bind="nota.nota1" required /></td>
        </tr>
        <tr>
            <td>Nota 2:</td>
            <td><input type="number" @bind="nota.nota2" /></td>
        </tr>
        <tr>
            <td>Nota 3:</td>
            <td><input type="number" @bind="nota.nota3" /></td>
        </tr>

        <tr>
            <td>Estudiante:</td>
            <td><input type="text" @bind="nota.idEstudiante" /></td>
        </tr>
        <tr>
            <td>Materia :</td>
            <td><input type="text" @bind="nota.idMateria" /></td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Adicionar" />
                <input type="button" value="Cancelar" @onclick="@Cancel" />
            </td>
        </tr>
    </table>
</EditForm>
@code {

    Notas nota = new Notas();

    protected async Task NotasInsert()
    {
        await NotasService.NotasInsert(nota);
        NavigationManager.NavigateTo("/");
    }

    protected void Cancel()
    {

    }
}
